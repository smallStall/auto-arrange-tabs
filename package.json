{
  "name": "auto-arrange-tabs",
  "publisher": "smallStall",
  "repository": {
    "type" : "git",
    "url" : "https://github.com/smallStall/auto-arrange-tabs"
  },
	"displayName": "Auto-Arrange-Tabs",
	"description": "This extension makes cluttered tabs clean automatically. It moves the used tabs on the far left.",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.65.0"
	},
	"categories": [
		"Other"
	],
  "keywords": [
    "tabs",
    "sort",
    "order",
    "arrange",
    "panels"
  ],
	"activationEvents": [
     "onStartupFinished"
	],
	"main": "./extension.js",
	"contributes": {
    "configuration": {
      "title": "Auto-Arrange-Tabs",
      "properties": {
        "auto-arrage-tabs.time": {
          "type": "number",
          "scope": "resource",
          "default": 10,
          "markdowDescription": "Specifies the number of seconds to move the tab from activation.",
          "maximum": 999,
          "minimum": 1
        }

      },
      "auto-arrage-tabs.fixed-left-tabs": {
        "comment": "feature-property",
        "type": "number",
        "scope": "resource",
        "default": 2,
        "markdowDescription": "Specifies the number of fixed left tabs. They don't move when time is reached",
        "maximum": 9,
        "minimum": 1
      }
  
    }
	},
  "icon": "icon.png",
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
        "@types/vscode": "^1.65.0",
        "@types/glob": "^7.2.0",
        "@types/mocha": "^9.1.0",
        "@types/node": "14.x",
        "eslint": "^8.9.0",
        "glob": "^7.2.0",
        "mocha": "^9.2.1",
        "typescript": "^4.5.5",
        "@vscode/test-electron": "^2.1.2"
    }
}
